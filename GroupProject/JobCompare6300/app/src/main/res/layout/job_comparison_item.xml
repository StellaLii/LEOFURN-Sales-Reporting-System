<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_job_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="Position: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_job_title_label"
        app:layout_constraintStart_toEndOf="@+id/tv_job_title_label"
        app:layout_constraintTop_toTopOf="@id/tv_job_title_label" />

    <TextView
        android:id="@+id/tv_company_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Company: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_job_title_label" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_company_label"
        app:layout_constraintStart_toEndOf="@+id/tv_company_label"
        app:layout_constraintTop_toTopOf="@id/tv_company_label" />

    <TextView
        android:id="@+id/tv_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Location: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_company_label" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_label"
        app:layout_constraintStart_toEndOf="@+id/tv_location_label"
        app:layout_constraintTop_toTopOf="@id/tv_location_label" />

    <TextView
        android:id="@+id/tv_yearly_salary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Yearly Salary: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_label" />

    <TextView
        android:id="@+id/tv_yearly_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_yearly_salary_label"
        app:layout_constraintStart_toEndOf="@+id/tv_yearly_salary_label"
        app:layout_constraintTop_toTopOf="@id/tv_yearly_salary_label"

        />

    <TextView
        android:id="@+id/tv_yearly_bonus_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Yearly Bonus: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_yearly_salary" />

    <TextView
        android:id="@+id/tv_yearly_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_yearly_bonus_label"
        app:layout_constraintStart_toEndOf="@+id/tv_yearly_bonus_label"
        app:layout_constraintTop_toTopOf="@id/tv_yearly_bonus_label" />

    <TextView
        android:id="@+id/tv_benefits_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Benefits: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_yearly_bonus" />

    <TextView
        android:id="@+id/tv_benefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_benefits_label"
        app:layout_constraintStart_toEndOf="@+id/tv_benefits_label"
        app:layout_constraintTop_toTopOf="@id/tv_benefits_label" />

    <TextView
        android:id="@+id/tv_stipend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Stipend: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_benefits" />

    <TextView
        android:id="@+id/tv_stipend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_stipend_label"
        app:layout_constraintStart_toEndOf="@+id/tv_stipend_label"
        app:layout_constraintTop_toTopOf="@id/tv_stipend_label" />

    <TextView
        android:id="@+id/tv_living_index_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingEnd="10dp"
        android:text="Living Index: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stipend" />

    <TextView
        android:id="@+id/tv_living_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_living_index_label"
        app:layout_constraintStart_toEndOf="@+id/tv_living_index_label"
        app:layout_constraintTop_toTopOf="@id/tv_living_index_label"

        />

    <TextView
        android:id="@+id/tv_current_job_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="Current Job:"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_living_index_label"

        />

    <TextView
        android:id="@+id/tv_current_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_job_label"
        app:layout_constraintStart_toEndOf="@+id/tv_current_job_label"
        app:layout_constraintTop_toTopOf="@id/tv_current_job_label"

        />


    <TextView
        android:id="@+id/tv_job_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="Job Score:"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_job_label"

        />

    <TextView
        android:id="@+id/tv_job_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_job_score_label"
        app:layout_constraintStart_toEndOf="@+id/tv_job_score_label"
        app:layout_constraintTop_toTopOf="@id/tv_job_score_label"
        android:textStyle="bold"

        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_job_title" />
</androidx.constraintlayout.widget.ConstraintLayout>